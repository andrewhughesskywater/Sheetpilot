{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "types": ["node"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "rootDir": "."
  },
  "include": [
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "release"
  ]
}
