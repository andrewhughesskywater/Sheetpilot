{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["node", "vitest", "vitest/globals"],
    "jsx": "react-jsx",
    "noPropertyAccessFromIndexSignature": false,
    "useUnknownInCatchVariables": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/backend/src/*"],
      "@/services": ["app/backend/src/services/index.ts"],
      "@/logic": ["app/backend/src/logic/index.ts"],
      "@/middleware": ["app/backend/src/middleware/index.ts"],
      "@/validation": ["app/backend/src/validation/index.ts"],
      "@sheetpilot/shared": ["app/shared/index.ts"],
      "@sheetpilot/shared/*": ["app/shared/*"]
    }
  },
  "include": [
    "app/backend/tests/**/*.ts",
    "app/shared/tests/**/*.ts",
    "app/tests/**/*.ts",
    "app/frontend/tests/**/*.ts",
    "app/frontend/tests/**/*.tsx",
    "app/frontend/tests/**/*.d.ts",
    "app/frontend/src/utils/safe-init.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "release",
    "app/backend/tests/mock-website/node_modules",
    "app/backend/src/services/bot/node_modules",
    "app/backend/src/services/bot/dist"
  ]
}
