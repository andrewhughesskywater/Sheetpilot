{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "noPropertyAccessFromIndexSignature": false
  },
  "include": [
    "app/backend/src/**/*.ts",
    "app/shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "release",
    "app/**/tests/**",
    "app/backend/tests/**",
    "app/backend/src/services/bot/node_modules"
  ]
}
