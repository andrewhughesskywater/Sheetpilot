{
  "name": "sheetpilot",
  "version": "1.3.6",
  "private": true,
  "description": "Business timesheet management and reporting tool",
  "author": "Andrew Hughes",
  "main": "build/dist/backend/src/main.js",
  "workspaces": [
    "app/backend",
    "app/frontend",
    "app/shared"
  ],
  "scripts": {
    "pre-rebuild": "powershell -NoProfile -Command \"$p = Get-Process electron -ErrorAction SilentlyContinue; if ($p) { $p | Stop-Process -Force }; exit 0\"",
    "rebuild": "npx @electron/rebuild -f -w better-sqlite3",
    "electron:compiled": "npm run pre-rebuild && npm run rebuild && cross-env NODE_PATH=app/backend/node_modules:node_modules electron build/dist/backend/src/main.js",
    "sync-version": "node scripts/sync-version.js",
    "verify": "node scripts/verify-tslib.js",
    "validate:deps": "node scripts/validate-dependencies.js",
    "copy-icon": "powershell -NoProfile -Command \"Copy-Item 'app/frontend/src/assets/images/icon.ico' -Destination 'build/icon.ico' -Force\"",
    "prebuild": "npm run validate:deps && npm run copy-icon",
    "build:main": "npm run sync-version && tsc -p tsconfig.build-main.json",
    "vite": "npm run -w @sheetpilot/frontend dev",
    "dev": "concurrently -k -n VITE,ELECTRON -c auto \"npm:vite\" \"wait-on tcp:5173 && npm run build:main && cross-env ELECTRON_IS_DEV=1 npm run electron:compiled\"",
    "build:renderer": "npm run -w @sheetpilot/frontend build",
    "build:bot": "cd app/backend/src/services/bot && npm run build",
    "build": "npm run build:main && npm run build:renderer && npm run build:bot && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "build:dir": "npm run build:main && npm run build:renderer && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --dir",
    "type-check": "npm run type-check:root && npm run type-check:frontend",
    "type-check:root": "tsc --noEmit --project tsconfig.typecheck.json",
    "type-check:frontend": "npm run -w @sheetpilot/frontend typecheck",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "npm run test:smoke && npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:renderer && npm run test:blank-screen && npm run test:bot",
    "test:unit": "cross-env VITEST=true vitest run --config app/backend/tests/vitest.config.ts",
    "test:watch": "cross-env VITEST=true vitest --config app/backend/tests/vitest.config.ts",
    "test:e2e": "cross-env VITEST=true vitest run --config app/backend/tests/vitest.config.e2e.ts",
    "test:integration": "cross-env VITEST=true vitest run --config app/backend/tests/vitest.config.integration.ts",
    "test:smoke": "cross-env VITEST=true vitest run --config app/backend/tests/vitest.config.smoke.ts",
    "test:blank-screen": "npm run -w @sheetpilot/frontend test:run -- --config ../tests/vitest.config.blank-screen-prevention.ts",
    "test:renderer": "npm run -w @sheetpilot/frontend test:run",
    "test:bot": "cd app/backend/src/services/bot && npm run test",
    "clean": "rimraf build/dist && cd app/backend/src/services/bot && npm run clean"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "tslib": "^2.8.1",
    "playwright": "^1.56.1"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.36.0",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.sheetpilot.app",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "build/dist/backend/**/*",
      "build/dist/shared/**/*",
      "app/backend/node_modules/**/*",
      "!app/backend/node_modules/*/{test,tests,__tests__}/**",
      "!app/backend/node_modules/*/{*.md,*.txt,LICENSE*,CHANGELOG*,README*,HISTORY*}",
      "!app/backend/node_modules/**/*.{map,ts}",
      "!app/backend/node_modules/.bin/**",
      "!app/backend/node_modules/*/{example,examples,docs,doc}/**",
      "node_modules/tslib/**/*",
      "app/frontend/dist/**/*",
      "package.json",
      "plugin-config.json"
    ],
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**/*"
    ],
    "extraMetadata": {
      "main": "build/dist/backend/src/main.js"
    },
    "win": {
      "icon": "build/icon.ico",
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    }
  }
}
