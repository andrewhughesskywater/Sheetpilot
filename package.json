{
  "name": "sheetpilot",
  "version": "1.0.0",
  "description": "Timesheet automation application with built-in timesheet entry and browser automation",
  "author": "SheetPilot Team",
  "main": "build/dist/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "electron": "ts-node main.ts",
    "electron:compiled": "npm run rebuild && electron build/dist/main.js",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "build:main": "tsc main.ts src/main/preload.ts --outDir build/dist --target ES2022 --module CommonJS --moduleResolution Node --esModuleInterop --allowSyntheticDefaultImports",
    "vite": "cd src/renderer && npm run dev",
    "dev": "concurrently -k -n VITE,ELECTRON -c auto \"npm:vite\" \"wait-on tcp:5173 && npm run build:main && npm run electron:compiled\"",
    "dev:hot": "concurrently -k -n VITE,ELECTRON -c auto \"npm:vite\" \"wait-on tcp:5173 && npm run build:main && npm run dev:main\"",
    "dev:main": "nodemon --watch main.ts --watch src/main/preload.ts --exec \"npm run build:main && electron build/dist/main.js\"",
    "build:renderer": "cd src/renderer && npm run build",
    "build:bot": "cd src/services/bot && npm run build",
    "build": "npm run build:main && npm run build:renderer && npm run build:bot && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:bot": "cd src/services/bot && npm test",
    "install:bot": "cd src/services/bot && npm install",
    "clean": "rimraf build/dist && cd src/services/bot && npm run clean",
    "generate-icon": "node scripts/generate-icon.js"
  },
  "build": {
    "appId": "com.sheetpilot.app",
    "productName": "Sheetpilot",
    "icon": "src/assets/images/icon.ico",
    "files": [
      "build/dist/**/*",
      "src/services/bot/dist/**/*",
      "src/renderer/dist/**/*",
      "src/assets/images/icon.ico",
      "!node_modules/.cache/**",
      "!src/services/bot/node_modules/**",
      "!src/renderer/node_modules/**"
    ],
    "directories": {
      "output": "build"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "src/assets/images/icon.ico",
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "src/assets/images/icon.ico",
      "uninstallerIcon": "src/assets/images/icon.ico",
      "installerHeader": "src/assets/images/icon.ico",
      "installerHeaderIcon": "src/assets/images/icon.ico"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": {
      "provider": "generic",
      "url": "file://\\\\swfl-file01\\Maintenance\\Python Programs\\SheetPilot"
    }
  },
  "dependencies": {
    "@handsontable/react-wrapper": "^16.1.1",
    "better-sqlite3": "^12.4.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "handsontable": "^16.1.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@eslint/js": "^9.37.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eslint-plugin-react-refresh": "^0.4.23",
    "happy-dom": "^19.0.2",
    "jsdom": "^27.0.0",
    "material": "^0.9.24",
    "nodemon": "^3.1.10",
    "playwright": "^1.55.1",
    "png2icons": "^2.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "^6.0.1",
    "sharp": "^0.34.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "ui": "^0.2.4",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
