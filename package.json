{
  "name": "sheetpilot",
  "version": "1.4.2",
  "private": true,
  "description": "Business timesheet management and reporting tool",
  "author": "Andrew Hughes",
  "main": "build/dist/backend/src/main.js",
  "workspaces": [
    "app/backend",
    "app/frontend",
    "app/shared"
  ],
  "scripts": {
    "postinstall": "npx playwright install chromium && npm run rebuild",
    "rebuild": "npx @electron/rebuild -f -w better-sqlite3",
    "electron:compiled": "npm run rebuild && cross-env NODE_PATH=app/backend/node_modules:node_modules electron build/dist/backend/src/main.js",
    "electron:dev": "cross-env NODE_PATH=app/backend/node_modules:node_modules electron build/dist/backend/src/main.js",
    "electron:watch": "nodemon",
    "sync-version": "node scripts/sync-version.js",
    "generate-icon": "node scripts/generate-icon.js",
    "build:main": "npm run sync-version && tsc -p tsconfig.build-main.json",
    "build:main:fast": "tsc -p tsconfig.build-main.json",
    "build:main:esbuild": "node scripts/build-dev.js",
    "build:main:watch": "node scripts/build-dev.js --watch",
    "vite": "npm run -w @sheetpilot/frontend dev",
    "reset-db": "node scripts/reset-dev-database.js",
    "dev": "concurrently -k -n VITE,ELECTRON -c auto \"npm:vite\" \"wait-on tcp:5173 && npm run build:main:fast && cross-env ELECTRON_IS_DEV=1 npm run electron:dev\"",
    "dev:watch": "concurrently -k -n VITE,BUILD,ELECTRON -c auto \"npm:vite\" \"npm run build:main:watch\" \"wait-on tcp:5173 build/dist/backend/src/main.js && npm run electron:watch\"",
    "build:renderer": "npm run -w @sheetpilot/frontend build",
    "build:bot": "cd app/backend/src/services/bot && npm run build",
    "bundle:browsers": "node scripts/bundle-playwright-browsers.js",
    "build": "npm run build:main && npm run build:renderer && npm run build:bot && npm run bundle:browsers && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "build:dir": "npm run build:main && npm run build:renderer && npm run build:bot && npm run bundle:browsers && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --dir",
    "type-check": "npm run type-check:root && npm run type-check:backend && npm run type-check:frontend",
    "type-check:root": "tsc --noEmit --project tsconfig.typecheck.json",
    "type-check:backend": "npm run -w @sheetpilot/backend typecheck",
    "type-check:frontend": "npm run -w @sheetpilot/frontend typecheck",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "npm run test:smoke && npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:renderer && npm run test:blank-screen && npm run test:e2e:blank-screen",
    "test:unit": "cross-env VITEST=true vitest run --config app/backend/tests/vitest.config.ts",
    "test:watch": "cross-env VITEST=true vitest --config app/backend/tests/vitest.config.ts",
    "test:e2e": "cross-env VITEST=true vitest run --config app/backend/tests/vitest.config.e2e.ts",
    "test:e2e:blank-screen": "npm run -w @sheetpilot/frontend test:run -- app/frontend/tests/e2e-blank-screen-prevention.spec.tsx",
    "test:integration": "cross-env VITEST=true vitest run --config app/backend/tests/vitest.config.integration.ts",
    "test:smoke": "cross-env VITEST=true vitest run --config app/backend/tests/vitest.config.smoke.ts",
    "test:blank-screen": "npm run -w @sheetpilot/frontend test:run -- --config ../tests/vitest.config.blank-screen-prevention.ts",
    "test:renderer": "npm run -w @sheetpilot/frontend test:run",
    "test:bot": "cd app/backend/src/services/bot && npm run test",
    "dev:smoke": "node -e \"console.log('For smoke test, run: bash scripts/dev-smoke.sh (Linux/Mac) or powershell scripts/dev-smoke.ps1 (Windows)')\"",
    "clean": "rimraf build/dist && cd app/backend/src/services/bot && npm run clean"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.552.0",
    "playwright": "^1.56.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "esbuild": "^0.25.12",
    "eslint": "^9.36.0",
    "glob": "^11.0.3",
    "nodemon": "^3.1.9",
    "png-to-ico": "^2.1.8",
    "rimraf": "^6.0.1",
    "sharp": "^0.33.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.sheetpilot.app",
    "publish": {
      "provider": "github",
      "owner": "andrewhughesskywater",
      "repo": "Sheetpilot"
    },
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "build/dist/backend/**/*",
      "build/dist/shared/**/*",
      "build/playwright-browsers/**/*",
      "app/backend/node_modules/**/*",
      "!app/backend/node_modules/*/{test,tests,__tests__}/**",
      "!app/backend/node_modules/*/{*.md,*.txt,LICENSE*,CHANGELOG*,README*,HISTORY*}",
      "!app/backend/node_modules/**/*.{map,ts}",
      "!app/backend/node_modules/.bin/**",
      "!app/backend/node_modules/*/{example,examples,docs,doc}/**",
      "node_modules/tslib/**/*",
      "node_modules/playwright/**/*",
      "app/frontend/dist/**/*",
      "package.json",
      "plugin-config.json",
      "scripts/fix-shortcut-icon.ps1"
    ],
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**/*",
      "**/node_modules/playwright/**/*",
      "**/build/playwright-browsers/**/*"
    ],
    "extraMetadata": {
      "main": "build/dist/backend/src/main.js"
    },
    "win": {
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": "always",
      "shortcutName": "Sheetpilot"
    }
  }
}
