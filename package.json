{
  "name": "sheetpilot",
  "version": "1.5.7",
  "private": true,
  "description": "Business timesheet management and reporting tool",
  "author": "Andrew Hughes",
  "main": "build/dist/backend/src/main.js",
  "workspaces": [
    "app/backend",
    "app/frontend",
    "app/shared"
  ],
  "scripts": {
    "postinstall": "npm run rebuild && npm run -w @sheetpilot/backend postinstall",
    "rebuild": "npx @electron/rebuild -f -w better-sqlite3",
    "electron:compiled": "npm run rebuild && cross-env NODE_PATH=app/backend/node_modules:node_modules electron build/dist/backend/src/main.js",
    "electron:dev": "cross-env NODE_PATH=app/backend/node_modules:node_modules electron build/dist/backend/src/main.js",
    "electron:watch": "nodemon",
    "sync-version": "node scripts/sync-version.js",
    "generate-icon": "node scripts/generate-icon.js",
    "compile": "npm run build:main && npm run build:renderer",
    "build:main": "npm run sync-version && node scripts/build-backend-bundle.js",
    "build:main:dev": "node scripts/build-dev.js",
    "build:main:watch": "node scripts/build-dev.js --watch",
    "vite": "npm run -w @sheetpilot/frontend dev",
    "reset-db": "node scripts/reset-dev-database.js",
    "dev": "concurrently -k -n VITE,ELECTRON -c auto \"npm:vite\" \"wait-on tcp:5173 && npm run build:main:dev && cross-env ELECTRON_IS_DEV=1 npm run electron:dev\"",
    "dev:watch": "concurrently -k -n VITE,BUILD,ELECTRON -c auto \"npm:vite\" \"npm run build:main:watch\" \"wait-on tcp:5173 build/dist/backend/src/main.js && npm run electron:watch\"",
    "build:renderer": "npm run -w @sheetpilot/frontend build",
    "build:renderer:analyze": "npm run -w @sheetpilot/frontend build:analyze",
    "build:bot": "node scripts/build-bot.js",
    "install:browsers": "cross-env PLAYWRIGHT_BROWSERS_PATH=node_modules/.playwright npx playwright install chromium",
    "prebuild": "npm run validate:quick",
    "prebuild:dir": "npm run validate:quick",
    "build": "npm run build:bot && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "build:dir": "npm run build:bot && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --dir",
    "type-check": "npm run type-check:root && npm run type-check:bot && npm run type-check:backend && npm run type-check:frontend && npm run type-check:tests",
    "type-check:root": "tsc --noEmit --project tsconfig.typecheck.json",
    "type-check:bot": "npm --prefix app/backend/src/services/bot run typecheck",
    "type-check:backend": "npm run -w @sheetpilot/backend typecheck",
    "type-check:frontend": "npm run -w @sheetpilot/frontend typecheck",
    "type-check:tests": "tsc --noEmit --project tsconfig.tests.json",
    "lint": "eslint app/backend/src app/frontend/src app/shared --max-warnings 0 --cache --fix",
    "lint:fix": "eslint app/backend/src app/frontend/src app/shared --max-warnings 0 --cache --fix",
    "lint:metrics": "eslint app/backend/src app/frontend/src app/shared --max-warnings 0 --cache",
    "lint:report": "eslint app/backend/src app/frontend/src app/shared -f json -o eslint-report.json",
    "format": "prettier --write \"app/**/*.{ts,tsx,json,md}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"app/**/*.{ts,tsx,json,md}\" \"*.{json,md}\"",
    "typecheck": "npm run type-check",
    "test": "npm run test:unit && npm run test:integration && npm run test:system && npm run test:e2e && npm run test:renderer && npm run test:blank-screen && npm run test:e2e:blank-screen",
    "test:unit": "cross-env VITEST=true vitest run --config app/backend/tests/vitest.config.ts",
    "test:watch": "cross-env VITEST=true vitest --config app/backend/tests/vitest.config.ts",
    "test:integration": "cross-env VITEST=true vitest run --config app/backend/tests/vitest.config.integration.ts",
    "test:system": "cross-env VITEST=true vitest run --config app/backend/tests/vitest.config.system.ts",
    "test:smoke": "cross-env VITEST=true vitest run --config app/backend/tests/vitest.config.smoke.ts",
    "test:e2e": "cross-env VITEST=true vitest run --config app/backend/tests/vitest.config.e2e.ts",
    "test:e2e:blank-screen": "npm run -w @sheetpilot/frontend test:run -- tests/e2e-blank-screen-prevention.spec.tsx",
    "test:blank-screen": "cd app/frontend && npx vitest run --config tests/vitest.config.blank-screen-prevention.ts",
    "test:renderer": "npm run -w @sheetpilot/frontend test:run",
    "test:bot": "cd app/backend/src/services/bot && npm run test",
    "dev:smoke": "node -e \"console.log('For smoke test, run: bash scripts/dev-smoke.sh (Linux/Mac) or powershell scripts/dev-smoke.ps1 (Windows)')\"",
    "migrate:imports": "node scripts/migrate-imports.js",
    "clean": "rimraf build/dist && cd app/backend/src/services/bot && npm run clean",
    "validate:compile": "npm run compile",
    "validate:bundle": "node scripts/validate-bundle.js",
    "validate:deps": "npm run rebuild",
    "validate:packaged-deps": "node scripts/validate-packaged-deps.js",
    "validate:quick": "npm run type-check && npm run validate:compile && npm run validate:bundle",
    "validate:full": "npm run validate:deps && npm run build:dir && npm run validate:packaged-deps",
    "validate:quality": "npm run lint && npm run lint:metrics && npm run depcruise:check",
    "depcruise:check": "depcruise --config .dependency-cruiser.js --ts-config tsconfig.json --progress none --output-type err app",
    "depcruise:report": "depcruise --config .dependency-cruiser.js --ts-config tsconfig.json --progress none --output-type html app > dependency-cruise-report.html",
    "build:debug": "cross-env DEBUG=electron-builder npm run build"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "playwright": "^1.56.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dependency-cruiser": "^16.10.0",
    "esbuild": "^0.25.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-sonarjs": "^3.0.5",
    "fontkit": "^2.0.4",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.5.2",
    "nodemon": "^3.1.9",
    "png-to-ico": "^2.1.8",
    "prettier": "^3.7.4",
    "rimraf": "^6.0.1",
    "sharp": "^0.33.5",
    "subset-font": "^2.4.0",
    "ts-prune": "^0.10.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.sheetpilot.app",
    "electronLanguages": [
      "en-US"
    ],
    "publish": {
      "provider": "github",
      "owner": "andrewhughesskywater",
      "repo": "Sheetpilot"
    },
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "build/dist/backend/**/*",
      "build/dist/shared/**/*",
      "build/bot/**/*",
      "!**/*.map",
      "app/frontend/dist/**/*",
      "package.json",
      "plugin-config.json",
      "scripts/fix-shortcut-icon.ps1",
      "!**/node_modules/.playwright/**",
      "!**/node_modules/playwright/.local-browsers/**",
      "!**/node_modules/playwright-core/.local-browsers/**"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**/*"
    ],
    "extraMetadata": {
      "main": "build/dist/backend/src/main.js"
    },
    "win": {
      "icon": "build/icon.ico",
      "signAndEditExecutable": false,
      "forceCodeSigning": false
    },
    "nsis": {
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": "always",
      "shortcutName": "Sheetpilot"
    },
    "linux": {
      "category": "Utility",
      "icon": "build/icon-256.png",
      "target": [
        "AppImage",
        "snap"
      ]
    },
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "sign": false
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
