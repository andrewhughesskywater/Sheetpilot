{
  "name": "sheetpilot",
  "private": true,
  "version": "1.4.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev --config backend/tauri.conf.json",
    "tauri:build": "tauri build --config backend/tauri.conf.json",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "npm run lint:js && npm run lint:rust",
    "lint:js": "eslint . --ext .js,.svelte",
    "lint:js:fix": "eslint . --ext .js,.svelte --fix",
    "lint:rust": "cd backend && cargo clippy -- -D warnings",
    "lint:rust:fix": "cd backend && cargo clippy --fix --allow-dirty --allow-staged",
    "format": "npm run format:js && npm run format:rust",
    "format:js": "prettier --write .",
    "format:js:check": "prettier --check .",
    "format:rust": "cd backend && cargo fmt",
    "format:rust:check": "cd backend && cargo fmt -- --check",
    "prepare": "npx simple-git-hooks || true",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.0",
    "flowbite": "^2.5.2",
    "flowbite-svelte": "^0.46.18",
    "handsontable": "^16.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@sveltejs/vite-plugin-svelte": "^5.0.4",
    "@tauri-apps/cli": "^2.3.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.2.9",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/ui": "^4.0.13",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.0",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.49",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.19.0",
    "svelte-eslint-parser": "^1.4.0",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "vite": "^6.0.11",
    "vitest": "^4.0.13"
  }
}
