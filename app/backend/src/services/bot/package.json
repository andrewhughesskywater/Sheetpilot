{
  "name": "sheetpilot-bot",
  "version": "1.5.0",
  "description": "Timesheet automation bot for Sheetpilot",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "keywords": [
    "timesheet",
    "automation",
    "playwright",
    "bot"
  ],
  "author": "Andrew Hughes",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.56.1"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
