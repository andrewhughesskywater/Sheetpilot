{
  "name": "@sheetpilot/bot",
  "version": "1.6.0",
  "private": true,
  "type": "module",
  "description": "Timesheet automation bot for Sheetpilot",
  "sideEffects": false,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node ../../build/bot/index.js",
    "typecheck": "tsc -p ../../tsconfig.typecheck.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rimraf ../../build/bot",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "keywords": [
    "timesheet",
    "automation",
    "playwright",
    "bot"
  ],
  "author": "Andrew Hughes",
  "license": "MIT",
  "dependencies": {
    "@sheetpilot/shared": "../shared",
    "playwright": "^1.56.1"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
